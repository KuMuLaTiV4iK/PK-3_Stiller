<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchorPane"
            fx:controller="org.example.aesstiller.RansomwareController"
            prefHeight="650.0" prefWidth="620.0" style="-fx-background-color: #251513;">
    <VBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="600.0" prefWidth="600.0" spacing="20.0">
        <ImageView fx:id="lockImageView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true"/>
        <Label fx:id="messageLabel" text="YOUR FILES ARE ENCRYPTED!!!" textFill="WHITE" style="-fx-font-size: 24px;">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <Label fx:id="bitcoinAddressLabel" textFill="WHITE" style="-fx-font-size: 18px;">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
        <TextField fx:id="addressForCheck" opacity="0.5" text="Enter your bitcoin address"
                   style="-fx-background-color: E5CACD; -fx-border-color: B49648;">
        <font>
            <Font name="Calibri Italic" size="14.0" />
        </font>
        </TextField>
        <Label fx:id="timerLabel" text="03:00:00" textFill="RED" style="-fx-font-size: 20px;">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
        <Button fx:id="checkPaymentButton" text="Check Payments"
                style="-fx-background-color: #127617; -fx-text-fill: WHITE;"/>
    </VBox>
    <stylesheets />
</AnchorPane>